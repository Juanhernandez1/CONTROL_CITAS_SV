{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "babel", "unicorn"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "pascalCase": true
        },
        "ignore": [
          "^index\\.js$",
          "^index\\.jsx$",
          "^App.test\\.js$",
          "^www\\.js$",
          "^reportWebVitals\\.js",
          "^setupTests\\.js"
        ]
      }
    ]
  }
}
